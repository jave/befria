{

    "description": "Befria yourself from browser tyranny.
It is a simple anti-procrastenation plugin, with the source code freely available.",
    "manifest_version": 3,
    "name": "Befria",
    "version": "1.0",
    "icons": {
        "48": "icons/befriad.png"
    },
    "permissions": [
	"storage",
	"tabs",
        "webNavigation",
        "alarms"
        
    ],

    "content_security_policy": {
        "script-src" :  "self" ,
        "object-src" : "self"
    },

  "optional_host_permissions": [
    "*://*/*"  ],
    "background": {
	"service_worker":             "background.js",
           "type": "module"
    },
    
    "action": {
        "default_icon": "icons/befriad.png",
        "default_title": "Befria",
        "default_popup": "popup.html"        
    },

    "options_ui": {
        "page": "options.html"        
    }

}
